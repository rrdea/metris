<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="30dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0000"
                android:endColor="#9444"
                android:type="linear"
                android:angle="90">
            </gradient>
        </shape>

    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
</layer-list>